{
  "name": "lambda-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf out",
    "build-dev": "esbuild --sourcemap --platform=node --target=es2020 --outfile=out/index.js",
    "build": "esbuild --bundle --minify --platform=node --target=es2020 --outfile=out/index.js",
    "postbuild": "cd out && zip index.zip index.js",
    "postbuild-windows": "cd out && tar -a -cf index.zip index.js*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.23.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.635.0",
    "@aws-sdk/client-eventbridge": "^3.633.0",
    "@aws-sdk/client-sns": "^3.637.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^10.0.0"
  }
}
